GET     /favicon.ico                            staticFile:public/images/icon.png

# Home page
GET     /                                       Application.index
GET     /timetable/?                            Application.showTimetable
GET     /autocomplete/?                         Application.autocompleteStation
GET     /faq/?                                  Application.showFAQ


# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
